<h1>Book list</h1>

<%= link_to "add book", new_book_path ,class: "btn btn-primary" %>


<table class="table table-hover ">
  <thead>
    <tr>
      <td>Book name</td>
      <td>Content</td>
      <td>Author</td>
      <td>price</td>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      
      <td><%= link_to book.name , book %></td>
      <td><%= book.content %></td>
      <td><%= book.author %></td>
      <td><%= book.price %></td>
      <td>
        <%= link_to "edit",edit_book_path(book) ,class: "btn btn-success btn-xs" %>
        <%= link_to "delete",book ,method: "delete" , data: {confirm:'delete?!'} ,class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
    <% end %>
  </tbody>
  
</table>
